<div id="wrapper">
  <div id="container">
    <h1>The Longest Word!</h1>
  </div>
</div>
<h2><% @letters.each do |letter| %>
  <%=letter%>
    <% end %>
</h2>

<h3>What is the longest word you can find</h3>
<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input id="collected_input" name="collected_input" onchange="alert('Input collected!')" type="hidden" value="<%= @letters%>"/>
  <input class="form-control" type="text" name="word" placeholder="Your word">
  <input class= "btn btn-light mt-3" type="submit">
</form>

<p class="score">Your score: <%= session[:score] %> <p class="btn btn-light"><%= link_to "Reset score", reset_path %></p> </p>
